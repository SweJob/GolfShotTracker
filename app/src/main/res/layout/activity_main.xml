<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.bergstedts.golfshottracker.MainActivity">

    <EditText
        android:id="@+id/KlubbaLbl"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:background="@null"
        android:cursorVisible="false"
        android:editable="false"
        android:elegantTextHeight="true"
        android:ems="10"
        android:gravity="fill_vertical"
        android:includeFontPadding="false"
        android:inputType="text"
        android:linksClickable="false"
        android:singleLine="false"
        android:text="Klubba"
        android:textIsSelectable="false"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:labelFor="@+id/ClubSpinner" />

    <EditText
        android:id="@+id/LieLbl"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:background="@null"
        android:cursorVisible="false"
        android:editable="false"
        android:elegantTextHeight="true"
        android:ems="10"
        android:gravity="fill_vertical"
        android:includeFontPadding="false"
        android:inputType="text"
        android:linksClickable="false"
        android:singleLine="false"
        android:text="Läge"
        android:textIsSelectable="false"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:labelFor="@+id/ClubSpinner"
        app:layout_constraintTop_toBottomOf="@+id/KlubbaLbl" />

    <Spinner
        android:id="@+id/LieSpinner"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/KlubbaLbl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClubSpinner" />

    <Spinner
        android:id="@+id/ClubSpinner"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/KlubbaLbl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StrikeBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:elevation="0dp"
        android:text="Slå"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LieLbl" />

</android.support.constraint.ConstraintLayout>
